<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!--元件的漸層-->
            <gradient
                android:startColor="#CDE7A6"
                android:centerColor="#BADD82"
                android:endColor="#CDE7A6"
                android:angle="270" />

            <!--邊框顏色、粗細-->
            <stroke
                android:width="2dp"
                android:color="#A3B3A3" />

            <!--圓角-->
            <corners android:radius="10dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
