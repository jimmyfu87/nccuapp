<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
//顏色
            <solid android:color="#ECE6C1"/>

            <!--邊框顏色、粗細-->
            <stroke
                android:width="1dp"
                android:color="#A3B3A3" />

            <!--圓角-->
            <corners android:radius="8dp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
